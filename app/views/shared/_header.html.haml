%body
  %header.main-header
    %a.logo{:href => "/index.html"}
      %span.logo-lg LAFFHUB CATALOGUE
    %nav.navbar.navbar-static-top{:role => "navigation"}
      %a.sidebar-toggle.border-right.border-left{"data-toggle" => "offcanvas", :href => "#", :role => "button"}
        %span.sr-only Toggle navigation
      .navbar-custom-menu
        %ul.nav.navbar-nav
          %li.dropdown.notifications-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %i.fa.fa-bell-o
              %span.label.label-warning 10
            %ul.dropdown-menu
              %li.header You have 10 notifications
              %li
                %ul.menu
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-users.text-aqua
                      5 new members joined today
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-warning.text-yellow
                      Very long description here that may not fit into the page and may cause design problems
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-users.text-red
                      5 new members joined
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-shopping-cart.text-green
                      25 sales made
                  %li
                    %a{:href => "#"}
                      %i.fa.fa-user.text-red
                      You changed your username
              %li.footer
                %a{:href => "#"} View all
          %li.dropdown.user.user-menu
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %span.hidden-xs
              - if user_signed_in? && current_user
                = "#{current_user.first_name} #{current_user.last_name}"
            %ul.dropdown-menu
              %li.user-header
                %p
                  #{current_user.first_name} #{current_user.last_name}
                  %small
                    - @date = current_user.created_at
                    Member since #{@date.strftime('%B, %Y')}
              %li.user-footer
                .pull-left
                  =link_to "My Profile", profile_path(current_user), class:"btn btn-default btn-flat"
                .pull-right
                  = link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-default btn-flat"

