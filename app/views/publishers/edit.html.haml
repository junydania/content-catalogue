.content-wrapper
  / Content Header (Page header)
  %section.content-header
    %h1
      Edit Publisher Form
      %small Edit Publisher
    %ol.breadcrumb
      %li
        %a{:href => "#"}
          %i.fa.fa-dashboard
          Home
      %li
        %a{:href => "#"} Edit Publisher
      %li.active Edit Publisher
  / Main content
  %section.content
    .row
      / left column
      .col-md-6
        / general form elements
        .box.box-primary{"data-aos" => "fade-up"}
          .box-header.with-border
            %h3.box-title Edit Publisher
          .box-body
            = form_for @publisher do |f|
              .form-group
                = f.label :publisher_name, "Publisher's Name"
                %br
                = f.text_field  :publisher_name, class: "form-control", :placeholder => "Enter Publisher's full name"
                %br
                = f.submit 'Submit', class: "btn btn-primary"
            = flash[:notice]

