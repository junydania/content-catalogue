- content_for :before_scripts do
  %link{:href => "/plugins/jvectormap/jquery-jvectormap-1.2.2.css", :rel => "stylesheet"}/
.content-wrapper.dashboard-page
  %section.content-header
    .row
      .col-sm-6.col-xs-12
        %h1.page-title
          Dashboard
        %ol.breadcrumb
          %li
            %a{:href => "#"}
              %i.fa.fa-dashboard
              Home
          %li.active Dashboard
      .col-sm-6.hidden-xs
        = form_for videos_path, method: 'get',  class: 'form header-form' do |f|
          .input-group.input-group-sm
            = f.text_field :search, class:'form-control', placeholder: 'Search Video'
            %span.input-group-btn
              = f.submit :search, class: 'search-btn btn.btn-flat', id:'search-btn' do
                %i.fa.fa-search

  %br
  / Main content
  .container
    .row
      .col-xs-12
        = form_for_filterrific @filterrific do |f|
          %div
            Search
            = f.text_field(:search_query, class: 'filterrific-periodically-observed')
            Comedian
            = f.select(:with_comedian_name, @filterrific.select_options[:with_comedian_name], { include_blank: '- Any -' })
            Sorted by
            = f.select(:sorted_by, @filterrific.select_options[:sorted_by])
            Registered after
            = f.text_field(:with_created_at_gte, class: 'js-datepicker')
          %br
          %div
            Publisher
            = f.select(:with_publisher_name, @filterrific.select_options[:with_publisher_name], { include_blank: '- Any -' })
            Category
            = f.select(:with_category_name, @filterrific.select_options[:with_category_name], { include_blank: '- Any -' })
            = link_to('Reset filters', reset_filterrific_url, class: "btn btn-success")
            = render_filterrific_spinner

  %section.content
    = flash[:notice]
    .row
      .col-xs-12
        .box{"data-aos" => "fade-up"}
          .box-header
            %h3.box-title VIDEO DETAILS
            .box-tools
              -#.input-group{:style => "width: 150px;"}
              -#  = form_for videos_path, method: 'get' do |f|
              -#    = f.text_field :search,  placeholder: "Search Video", class: "form-control.input-sm.pull-right"
              -#    -#.input-group-btn
              -#    -#  %button.btn.btn-sm.btn-default
              -#    -#    %i.fa.fa-search

              / /.box-header
          = render( partial: 'videos/list',locals: { videos: @videos})

    %br

    .row{"data-aos" => "fade-up"}
      .col-md-12
        .box.box-solid.box-default
          .box-header.with-border
            %h3.box-title Monthly Earnings Report
            .box-tools.pull-right
              %button.btn.btn-box-tool{"data-widget" => "collapse"}
                %i.fa.fa-minus
              .btn-group
                %button.btn.btn-box-tool.dropdown-toggle{"data-toggle" => "dropdown"}
                  %i.fa.fa-wrench
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    %a{:href => "#"} Action
                  %li
                    %a{:href => "#"} Another action
                  %li
                    %a{:href => "#"} Something else here
                  %li.divider
                  %li
                    %a{:href => "#"} Separated link
              %button.btn.btn-box-tool{"data-widget" => "remove"}
                %i.fa.fa-times
          / /.box-header
          .box-body
            .row
              .col-md-7
                %p.text-center
                  %strong Sales: 1 Jan, 2016 - 30 Jul, 2016
                .chart
                  / Sales Chart Canvas
                  %canvas#salesChart
                / /.chart-responsive
              / /.col
              .col-md-5.stats-description-container
                .row
                  .col-sm-6
                    .description-block
                      %span.description-percentage.text-green
                        %i.fa.fa-caret-up
                        17%
                      %h5.description-header $35,210.43
                      %span.description-text TOTAL REVENUE
                    / /.description-block
                  .col-sm-6
                    .description-block
                      %span.description-percentage.text-yellow
                        %i.fa.fa-caret-left
                        0%
                      %h5.description-header $10,390.90
                      %span.description-text TOTAL COST
                    / /.description-block
                .row
                  .col-sm-6
                    .description-block
                      %span.description-percentage.text-green
                        %i.fa.fa-caret-up
                        20%
                      %h5.description-header $24,813.53
                      %span.description-text TOTAL PROFIT
                    / /.description-block
                  .col-sm-6
                    .description-block
                      %span.description-percentage.text-red
                        %i.fa.fa-caret-down
                        18%
                      %h5.description-header 1200
                      %span.description-text GOAL COMPLETIONS

    .row
      .col-md-8
        .box.box-primary
          .box-header.with-border
            %h3.box-title Real Time Website Visitor Map
            .box-tools.pull-right
              %button.btn.btn-box-tool{"data-widget" => "collapse"}
                %i.fa.fa-minus
              %button.btn.btn-box-tool{"data-widget" => "remove"}
                %i.fa.fa-times
          .box-body
            .map-container
              #map-canvas


- content_for :after_body do
  %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyDjmOKmkLPUWeJLc9P9L-H-ZynmHl16Lhs"}
  %script{:src => "/plugins/sparkline/jquery.sparkline.min.js"}
  %script{:src => "/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"}
  %script{:src => "/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"}
  %script{:src => "/plugins/chartjs-2/Chart.min.js"}
  %script{:src => "/assets/pages/dashboard.js"}


%p Content Catalogue Dashboard




